<?xml version="1.0"?>
<project>
    <extend>${basedir}/../../tools/maven/project.xml</extend>
    <name>LoggerStore</name>
    <groupId>jcomponent</groupId>
    <id>jcomponent-loggerstore</id>
    <gumpRepositoryId>components</gumpRepositoryId>
    <package>org.jcomponent.${pom.artifactId.substring(11)}</package>
    <siteDirectory>/home/groups/s/sp/spice/htdocs/${pom.artifactId.substring(11)}</siteDirectory>
    <distributionDirectory>/home/groups/s/sp/spice/htdocs/maven/${groupId}</distributionDirectory>
    <currentVersion>1.0</currentVersion>
    <inceptionYear>2003</inceptionYear>

    <shortDescription>Component for storing a set of Avalon Loggers.</shortDescription>

    <description>
        Component for storing an Avalon Logger hierarchy, abstracting
        the underlying logger implementation and configuration mechanims.
        ie Avalon LogKit, Log4J or JDK14 Loggers are possible implementations
        managed by this toolkit.
    </description>

    <versions>
        <version>
            <id>1.0</id>
            <name>1.0</name>
            <tag>LOGGERSTORE_1_0-tag</tag>
        </version>
        <version>
            <id>0.5</id>
            <name>0.5</name>
            <tag>LOGGERSTORE_0_5-tag</tag>
        </version>
    </versions>

    <dependencies>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-framework</artifactId>
            <version>4.1.4</version>
        </dependency>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-logkit</artifactId>
            <version>20030527</version>
        </dependency>
        <dependency>
            <groupId>excalibur</groupId>
            <artifactId>excalibur-i18n</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>excalibur</groupId>
            <artifactId>excalibur-logger</artifactId>
            <version>20030713</version>
            <properties>
                <category>runtime</category>
            </properties>
        </dependency>
        <dependency>
            <id>log4j</id>
            <version>1.2.8</version>
        </dependency>
        <dependency>
            <id>xml-apis</id>
            <version>1.0.b2</version>
        </dependency>
        <dependency>
            <id>xerces</id>
            <version>2.2.1</version>
        </dependency>
    </dependencies>

