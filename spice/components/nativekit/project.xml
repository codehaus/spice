<?xml version="1.0"?>
<project>
    <extend>../tools/maven/project.xml</extend>
    <name>Native Toolkit</name>
    <id>nativekit</id>

    <shortDescription>A toolkit for executing Native executables</shortDescription>
    <description>
        This toolkit is designed to make it easier to execute native executables
        on multiple platforms. The toolkit will try to shield the user from system
        specific I/O and environment management. It was originally extracted from
        the Apache Myrmidon project.
    </description>

    <developers>
        <developer>
            <name>Peter Donald</name>
            <id>donaldp</id>
            <email>peter@apache.org</email>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <id>avalon-framework</id>
            <version>4.0</version>
        </dependency>
        <dependency>
            <id>excalibur-i18n</id>
            <version>1.0</version>
        </dependency>
    </dependencies>

    <build>
        <nagEmailAddress>spice-devel@lists.sourceforge.net</nagEmailAddress>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <unitTest>
            <includes>
                <include>**/*TestCase*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
        </unitTest>
    </build>
</project>