<?xml version="1.0"?>
<project>
    <extend>../../tools/maven/project.xml</extend>
    <name>JNDI Kit</name>
    <id>jndikit</id>

    <shortDescription>A toolkit for building JNDI providers</shortDescription>
    <description>
     JNDI Kit is a toolkit designed to help with the construction of JNDI
     providers. The toolkit also provides users with ready made memory based
     and rmi based contexts.
    </description>

    <developers>
        <developer>
            <name>Peter Donald</name>
            <id>donaldp</id>
            <email>peter@apache.org</email>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>

    <build>
        <nagEmailAddress>spice-devel@lists.sourceforge.net</nagEmailAddress>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <unitTest>
            <includes>
                <include>**/*TestCase*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
        </unitTest>
    </build>
</project>