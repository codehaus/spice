<?xml version="1.0"?>
<project>
    <extend>../../tools/maven/project.xml</extend>
    <name>XInvoke</name>
    <id>xinvoke</id>

    <shortDescription>Easy to use interceptor toolkit</shortDescription>

    <description>
        XInvoke is a framework which provides a simple means of compile-time
        and run-time management of chains of "Interceptors" for classes, objects and
        methods.  The inteceptor chains will be executed for each method call.
    </description>

    <developers>
        <developer>
            <name>Peter Donald</name>
            <id>donaldp</id>
            <email>peter@apache.org</email>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
        <developer>
            <name>James Walker</name>
            <id>j_cosmo</id>
            <email>james@stocksoftware.com.au</email>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <id>avalon-framework</id>
            <version>4.0</version>
        </dependency>
        <dependency> <!-- for jexl -->
            <id>commons-logging</id>
            <version>1.0.2</version>
        </dependency>
        <dependency>
            <id>commons-jexl</id>
            <version>1.0-beta-1</version>
        </dependency>
        <dependency>
            <id>oro</id>
            <version>2.0.6</version>
        </dependency>
    </dependencies>

    <build>
        <nagEmailAddress>spice-devel@lists.sourceforge.net</nagEmailAddress>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <unitTest>
            <includes>
                <include>**/*TestCase*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
        </unitTest>
    </build>
</project>