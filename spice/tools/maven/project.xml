<?xml version="1.0"?>
<project>

    <pomVersion>3</pomVersion>
    <currentVersion>1.0</currentVersion>
    <inceptionYear>2000</inceptionYear>
    <organization>
        <name>Codehaus</name>
        <url>http://codehaus.org</url>
        <logo>http://codehaus.org/codehaus-small.gif</logo>
    </organization>

	<groupId>spice</groupId>
    <package>org.realityforge.${pom.artifactId.substring(6)}</package>
    <url>http://spice.codehaus.org/</url>
    <siteAddress>spice.codehaus.org</siteAddress>
    <siteDirectory>/www/spice.codehaus.org/</siteDirectory>
    <distributionSite>codehaus.org</distributionSite>
    <distributionDirectory>/www/dist.codehaus.org</distributionDirectory>
    <issueTrackingUrl>http://jira.codehaus.org/secure/BrowseProject.jspa?id=10140</issueTrackingUrl>

    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.codehaus.org:/scm/cvspublic:spice</connection>
        <url>http://cvs.codehaus.org/viewcvs.cgi/?root=spice</url>
    </repository>

    <versions>
        <version>
            <id>current</id>
            <name>Current</name>
            <tag>HEAD</tag>
        </version>
    </versions>

    <licenses>
        <license
            name="The Spice Software License, Version 1.1"
            url="${pom.distributionSite}/LICENSE.txt"
            distribution="repo"/>
    </licenses>

    <mailingLists>
        <mailingList>
            <name>Spice Users List</name>
            <subscribe>spice-user-request@lists.codehaus.org</subscribe>
            <unsubscribe>spice-user-request@lists.codehaus.org</unsubscribe>
            <archive>http://lists.codehaus.org/pipermail/spice-user/</archive>
        </mailingList>
        <mailingList>
            <name>Spice Developers List</name>
            <subscribe>spice-dev-request@lists.codehaus.org</subscribe>
            <unsubscribe>spice-dev-request@lists.codehaus.org</unsubscribe>
            <archive>http://lists.codehaus.org/pipermail/spice-dev/</archive>
        </mailingList>
        <mailingList>
            <name>Spice CVS Commits List</name>
            <subscribe>spice-scm-request@lists.codehaus.org</subscribe>
            <unsubscribe>spice-scm-request@lists.codehaus.org</unsubscribe>
            <archive>http://lists.codehaus.org/pipermail/spice-scm/</archive>
        </mailingList>
    </mailingLists>
    
    <build>
        <nagEmailAddress>spice-dev@lists.codehaus.org</nagEmailAddress>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <unitTest>
            <resource>
                <directory>${basedir}/src/test</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>

            <includes>
                <include>**/*TestCase.*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
        </unitTest>
        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <!--<targetPath>path/</targetPath>-->
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <!--
                <sourceModifications>
                    <sourceModification>
                        <className>java.util.logging.Logger</className>
                        <excludes>
                            <exclude>**/Jdk14Logger.java</exclude>
                        </excludes>
                    </sourceModification>
                </sourceModifications>
        -->
    </build>

    <reports>
        <report>maven-jdepend-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-clover-plugin</report>
        <report>maven-license-plugin</report>
        <report>maven-faq-plugin</report>
        <report>maven-simian-plugin</report>
    </reports>

    <dependencies>
  	  <dependency>
    	 <groupId>commons-jelly</groupId>
    	 <artifactId>commons-jelly-tags-velocity</artifactId>
      	 <version>20030303.205659</version>
      </dependency>
	  <dependency>
    	 <id>velocity</id>
    	 <version>1.3</version>
   	  </dependency>
	</dependencies>

</project>