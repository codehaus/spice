<security-config>
    <parameters>
        <!-- The SecurityFilter will redirect this URL to when login required -->
        <init-param>
            <param-name>login.url</param-name>
            <param-value>/login.htm</param-value>
        </init-param>
        <!-- Specify 3 characters to make cookie encoding unique for your application -->
        <init-param>
            <param-name>cookie.encoding</param-name>
            <param-value>grI</param-value>
        </init-param>
        <!-- The key that the original URL is stored with in the session -->
        <init-param>
            <param-name>original.url.key</param-name>
            <param-value>myapp_security_originalurl</param-value>
        </init-param>
    </parameters>

    <rolemapper class="com.atlassian.seraph.auth.GroupRoleMapper" />

    <!-- A controller is not required. If not specified, security will always be on -->
    <!-- <controller class="com.atlassian.myapp.setup.MyAppSecurityController" /> -->

    <services>
        <!-- The path service is the most common service.
            It supplies roles based on the incoming URL path. -->
        <service class="com.atlassian.seraph.service.PathService">
            <init-param>
                <param-name>config.file</param-name>
                <param-value>/security-paths.xml</param-value>
            </init-param>
        </service>
        <!-- More security services go here ... -->
    </services>

    <interceptors>
    </interceptors>
</security-config>

