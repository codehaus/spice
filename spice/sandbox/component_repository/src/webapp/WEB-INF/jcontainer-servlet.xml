<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="viewResolver" class="com.interface21.web.servlet.view.ResourceBundleViewResolver">
        <property name="basename">
            <value>views</value>
        </property>
    </bean>

    <bean id="urlMapping" class="com.interface21.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/welcome.htm">jcontainerController</prop>
                <prop key="/vets.htm">jcontainerController</prop>
                <prop key="/owner.htm">jcontainerController</prop>
                <prop key="/registerComponent.htm">registerComponentForm</prop>
                <prop key="/componentRegistrationForm.htm">showComponentRegistrationFormController</prop>
                <prop key="/listComponents.htm">listComponentsController</prop>
                <prop key="/addCategory.htm">categoryController</prop>
                <prop key="/findComponent.htm">showFindComponentFormController</prop>
                <prop key="/findComponentResults.htm">findComponentController</prop>
            </props>
        </property>
    </bean>

    <bean id="jcontainerControllerMethodNameResolver" class="com.interface21.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
                <prop key="/welcome.htm">welcomeHandler</prop>
                <prop key="/vets.htm">vetsHandler</prop>
            </props>
        </property>
    </bean>

    <bean id="jcontainerController" class="jcontainer.web.JContainerController">
        <property name="methodNameResolver">
            <ref bean="jcontainerControllerMethodNameResolver"/>
        </property>
    </bean>

    <bean id="listComponentsController" class="jcontainer.usecases.listcomponents.ListComponentsController">
    </bean>

    <bean id="registerComponentForm" class="jcontainer.usecases.addcomponent.AddComponentController">
        <property name="formView">
            <value>addComponentForm</value>
        </property>
        <property name="successView"><value>welcomeView</value></property>
    </bean>

    <bean id="findComponentController" class="jcontainer.usecases.findcomponent.FindComponentController">
    </bean>

    <bean id="showFindComponentFormController" class="jcontainer.usecases.findcomponent.ShowFindComponentFormController">
    </bean>

    <bean id="showComponentRegistrationFormController" class="jcontainer.usecases.addcomponent.ShowComponentRegistrationFormController">
    </bean>

    <bean id="categoryController" class="jcontainer.usecases.addcategory.AddCategoryController">
        <property name="formView">
            <value>addCategoryForm</value>
        </property>
        <property name="successView"><value>welcomeView</value></property>
    </bean>

</beans>
