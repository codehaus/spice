<?xml version="1.0"?>
<project>
    <extend>${basedir}/../../tools/maven/project.xml</extend>
    <name>Native Toolkit</name>
    <id>spice-nativekit</id>
    <gumpRepositoryId>sandbox</gumpRepositoryId>
    <inceptionYear>2001</inceptionYear>

    <shortDescription>A toolkit for executing Native executables</shortDescription>
    <description>
        This toolkit is designed to make it easier to execute native executables
        on multiple platforms. The toolkit will try to shield the user from system
        specific I/O and environment management. It was originally extracted from
        the Apache Myrmidon project.
    </description>

    <developers>
        <developer>
            <name>Peter Donald</name>
            <id>donaldp</id>
            <email>peter@apache.org</email>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-framework</artifactId>
            <version>4.1.4</version>
        </dependency>
        <dependency>
            <groupId>excalibur</groupId>
            <artifactId>excalibur-i18n</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>

</project>
