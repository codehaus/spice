<module name="spice">

    <url href="http://spice.sourceforge.net"/>
    <description>
      A repository of reusable components for Java Containers.
    </description>

    <cvs repository="sourceforge" host-prefix="cvs.spice"
        module="spice" dir="spice"/>

    <project name="spice-cli">
        <package>org.realityforge.cli</package>

        <ant basedir="components/cli">
            <property name="final.name" value="cli-@@DATE@@"/>
        </ant>

        <depend project="jakarta-ant" inherit="runtime"/>
        <depend project="junit"/>
        <depend project="xml-xerces"/>
        <work nested="components/cli/target/classes"/>
        <work nested="components/cli/target/test-classes"/>

        <home nested="components/cli"/>
        <jar name="target/cli-@@DATE@@.jar"/>
        <nag from="Peter Donald &lt;peter@realityforge.org&gt;"
            to="spice-devel@lists.sourceforge.net"/>
    </project>

