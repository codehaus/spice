<syslog version="1.0" packages="org.spice.logconf.lib">

    <predefined name="*console*"/>
    <predefined name="*server*"/>

    <destination name="dest1" type="File" target="/var/logs/myapp.log"/>

    <destination name="dest1" type="File"/>

    <destination name="dest2" type="RotatingFile" target="/var/logs/dest2.log">
          ...config goes here...
    </destination>

    <route destinations="dest1,dest2">
        <include name="*.auth"/>
        <exclude name="http.*"/>
    </route>

    <route destinations="dest1,dest2">
        <include name="network.encoder"/>
        <filter priority="WARN"/>
    </route>

</syslog>
