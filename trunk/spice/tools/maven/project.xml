<?xml version="1.0"?>
<project>

    <pomVersion>3</pomVersion>

    <currentVersion>1.0</currentVersion>
    <inceptionYear>2000</inceptionYear>
    <!--<logo>/images/${pom.artifactId}.gif</logo>-->

    <organization>
        <name>The Spice Group</name>
        <url>http://sourceforge.net/projects/spice</url>
        <logo>http://sourceforge.net/sflogo.php?group_id=67448&amp;type=5</logo>
    </organization>
    <package>org.realityforge.${pom.artifactId}</package>

    <url>http://spice.sourceforge.net/${pom.artifactId}</url>
    <issueTrackingUrl>http://sourceforge.net/tracker/?group_id=67448</issueTrackingUrl>

    <siteAddress>spice.sourceforge.net</siteAddress>
    <siteDirectory>/home/groups/s/sp/spice/htdocs/${pom.artifactId}</siteDirectory>
    <distributionDirectory>/home/groups/s/sp/spice/htdocs/downloads/${pom.artifactId}</distributionDirectory>
    <distributionSite>spice.sourceforge.net</distributionSite>

    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/spice:${pom.groupId}/${pom.artifactId}</connection>
        <url>http://cvs.sourceforge.net/cgi-bin/viewcvs.cgi/spice/spice/${pom.groupId}</url>
    </repository>

    <versions>
        <version>
            <id>current</id>
            <name>Current</name>
            <tag>HEAD</tag>
        </version>
    </versions>

    <licenses>
        <license
            name="The Spice Software License, Version 1.1"
            url="${pom.distributionSite}/LICENSE.txt"
            distribution="repo"/>
    </licenses>

    <mailingLists>
        <mailingList>
            <name>Spice Developers List</name>
            <subscribe>spice-devel-request@lists.sourceforge.net</subscribe>
            <unsubscribe>spice-devel-request@lists.sourceforge.net</unsubscribe>
            <archive>http://sourceforge.net/mailarchive/forum.php?forum=spice-devel</archive>
        </mailingList>
    </mailingLists>

    <build>
        <nagEmailAddress>spice-devel@lists.sourceforge.net</nagEmailAddress>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <unitTest>
            <resource>
                <directory>src/test</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>

            <includes>
                <include>**/*TestCase*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
        </unitTest>
        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <!--<targetPath>path/</targetPath>-->
                <includes>
                    <exclude>**/*.java</exclude>
                </includes>
            </resource>
        </resources>
        <!--
                <sourceModifications>
                    <sourceModification>
                        <className>java.util.logging.Logger</className>
                        <excludes>
                            <exclude>**/Jdk14Logger.java</exclude>
                        </excludes>
                    </sourceModification>
                </sourceModifications>
        -->

    </build>

    <reports>
        <report>maven-jdepend-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-junit-report-plugin</report>
        <!--<report>maven-linkcheck-plugin</report>-->
        <report>maven-clover-plugin</report>
        <!--<report>maven-license-plugin</report>-->
    </reports>
</project>