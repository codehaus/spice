<module name="spice">

    <url href="http://spice.sourceforge.net"/>
    <description>
      A repository of reusable components for Java Containers.
    </description>

    <cvs repository="sourceforge" host-prefix="cvs.spice"
        module="spice" dir="spice"/>

    <project name="spice-classman">
        <package>org.realityforge.classman</package>

        <ant basedir="components/classman">
            <property name="final.name" value="spice-classman-@@DATE@@"/>
        </ant>

        <depend project="jakarta-ant" inherit="runtime"/>
        <depend project="junit"/>
        <depend project="xml-xerces"/>
        <depend project="excalibur-extension"/>
        <depend project="excalibur-i18n"/>
        <depend project="jakarta-oro"/>
        <work nested="components/classman/target/classes"/>
        <work nested="components/classman/target/test-classes"/>

        <home nested="components/classman"/>
        <jar name="target/spice-classman-@@DATE@@.jar"/>
        <nag from="Peter Donald &lt;peter@realityforge.org&gt;"
            to="spice-devel@lists.sourceforge.net"/>
    </project>

