<?xml version="1.0"?>
<project>
    <extend>../../tools/maven/project.xml</extend>
    <name>MetaSchema</name>
    <id>metaschema</id>

    <shortDescription>
    	Provides a validation schema for MetaClass
    </shortDescription>

    <description>
    	Provides a validation schema for MetaClass
    </description>

    <developers>
        <developer>
            <name>Mauro Talevi</name>
            <id>maurotalevi</id>
            <email>maurotalevi@users.sf.net</email>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>

    <build>
        <nagEmailAddress>spice-devel@lists.sourceforge.net</nagEmailAddress>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>


		<resources>
            <includes>
                <include>etc/schema.xml</include>
            </includes>
  		</resources>

        <unitTest>
            <!--
            Uncomment with next version of Maven and remove
            coresponding cruft from maven.xml 
            <resource>
                <directory>src/test</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
            -->
            <includes>
                <include>**/*Test*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
        </unitTest>
    </build>

    <dependencies>
        <dependency>
            <id>commons-logging</id>
            <version>1.0</version>
        </dependency>
        <dependency>
            <id>regexp</id>
            <version>1.2</version>
        </dependency>
        <dependency>
            <id>exteca-ontology</id>
            <version>1.0-b1</version>
        </dependency>
        <dependency>
            <id>metaclass</id>
            <version>1.0</version>
        </dependency>
        <dependency>
            <id>qdox</id>
            <version>1.0</version>
        </dependency>
        <dependency>
            <id>junit</id>
            <version>3.7</version>
        </dependency>
        <dependency>
            <id>ant</id>
            <version>1.5.1</version>
            <url>http://jakarta.apache.org/ant/</url>
        </dependency>
    </dependencies>
</project>
