<?xml version="1.0"?>
<project>
    <extend>../../tools/maven/project.xml</extend>
    <name>MetaClass</name>
    <id>metaclass</id>

    <shortDescription>Provides runtime access to attributes</shortDescription>

    <description>
        MetaClass provides runtime access to attributes specified in javadoc format.
    </description>

    <developers>
        <developer>
            <name>Doug Hagan</name>
            <id>dougecko</id>
            <email>doug@stocksoftware.com.au</email>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>

    <build>
        <nagEmailAddress>spice-devel@lists.sourceforge.net</nagEmailAddress>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <unitTest>
            <!--
            Uncomment with next version of Maven and remove
            coresponding cruft from maven.xml 
            <resource>
                <directory>src/test</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
            -->
            <includes>
                <include>**/*TestCase*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
        </unitTest>
    </build>

    <dependencies>
        <dependency>
            <id>qdox</id>
            <version>1.0</version>
        </dependency>
        <dependency>
            <id>junit</id>
            <version>3.7</version>
        </dependency>
        <dependency>
            <id>ant</id>
            <version>1.5.1</version>
            <url>http://jakarta.apache.org/ant/</url>
        </dependency>
    </dependencies>
</project>
