<project default="main"
    xmlns:maven="jelly:maven">

    <goal name="main">
        <attainGoal name="build"/>
    </goal>

    <goal name="build">
        <echo message="Building Components Repository"/>
        <maven:reactor
            basedir="${basedir}"
            includes="*/project.xml"
            goals="clean,jar:install"
            banner="Building"
            ignoreFailures="false" />
<!--
excludes="metaschema/project.xml"
-->
    </goal>

    <goal name="site">
        <maven:reactor
            basedir="${basedir}"
            includes="converter/project.xml,jndikit/project.xml,metaclass/project.xml,
                  nativekit/project.xml,site/project.xml,xinvoke/project.xml"
            goals="clean,site:deploy"
            banner="Deploying Site"
            ignoreFailures="true"/>
    </goal>

</project>
