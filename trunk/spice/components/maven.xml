<project default="main"
    xmlns:reactor="reactor"
    xmlns:m="maven">

    <goal name="main">
        <attainGoal name="build"/>
    </goal>

    <goal name="build">
        <reactor:execute
            basedir="${basedir}"
            glob="converter/project.xml,jndikit/project.xml,metaclass/project.xml,
                  nativekit/project.xml,site/project.xml,xinvoke/project.xml"
            goals="clean,jar:install"
            banner="Building"
            ignoreFailures="true" />
    </goal>

    <goal name="site">
        <reactor:execute
            basedir="${basedir}"
            glob="converter/project.xml,jndikit/project.xml,metaclass/project.xml,
                  nativekit/project.xml,site/project.xml,xinvoke/project.xml"
            goals="clean,site:deploy"
            banner="Deploying Site"
            ignoreFailures="true"/>
    </goal>

</project>
