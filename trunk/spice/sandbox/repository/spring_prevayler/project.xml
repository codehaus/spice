<?xml version="1.0"?>
<project>
    <pomVersion>3</pomVersion>
    <name>jcontainer</name>
    <id>jcontainer</id>
    <currentVersion>0.1</currentVersion>
    <inceptionYear>2003</inceptionYear>
    <package>jcontainer</package>

    <developers>
        <developer>
            <name>Mike Hogan</name>
            <id>mikehogan</id>
            <email>me@mikehogan.net</email>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <groupId>spring</groupId>
            <artifactId>spring-full</artifactId>
            <version>0.9</version>
            <properties>
                <war.bundle.jar>true</war.bundle.jar>
            </properties>
        </dependency>
        <dependency>
            <id>servletapi</id>
            <version>2.3</version>
        </dependency>
        <dependency>
            <id>commons-logging</id>
            <version>1.0.2</version>
            <properties>
                <war.bundle.jar>true</war.bundle.jar>
            </properties>
        </dependency>
        <dependency>
            <id>log4j</id>
            <version>1.2.8</version>
            <properties>
                <war.bundle.jar>true</war.bundle.jar>
            </properties>
        </dependency>
        <dependency>
            <id>jta</id>
            <version>1.0.1B</version>
            <properties>
                <war.bundle.jar>true</war.bundle.jar>
            </properties>
        </dependency>
        <dependency>
            <id>jstl</id>
            <version>1.0.2</version>
            <properties>
                <war.bundle.jar>true</war.bundle.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>taglibs</groupId>
            <artifactId>standard</artifactId>
            <version>1.0.2</version>
            <properties>
                <war.bundle.jar>true</war.bundle.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>prevayler</groupId>
            <artifactId>prevayler</artifactId>
            <version>1.02.001</version>
            <properties>
                <war.bundle.jar>true</war.bundle.jar>
            </properties>
        </dependency>
    </dependencies>

    <build>

        <nagEmailAddress>
            me@mikehogan.net
        </nagEmailAddress>

        <sourceDirectory>src</sourceDirectory>

        <unitTestSourceDirectory>tests</unitTestSourceDirectory>
        <integrationUnitTestSourceDirectory/>

        <aspectSourceDirectory/>

        <!-- Unit test cases -->
        <unitTest>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
        </unitTest>

        <!-- J A R  R E S O U R C E S -->
        <!-- Resources that are packaged up inside the JAR file -->
        <resources>
            <resource>
                <directory>${basedir}/conf</directory>
                <includes>
                    <include>*.properties</include>
                    <include>*.xml</include>
                </includes>
            </resource>
        </resources>

        <!-- Integration unit test cases -->
        <integrationUnitTest/>

        <jars>
        </jars>
    </build>
</project>
