<syslog version="1.0" packages="org.realityforge.xsyslog.lib">
    <predefined name="*console*"/>
    <predefined name="*server*"/>

    <destination name="dest1" type="File"/>
    <destination name="dest2" type="RotatingFile"></destination>

    <route destinations="dest1,dest2">
        <include name="*.auth"/>
        <exclude name="http.*"/>
    </route>

    <route destinations="dest2">
        <include name="network.encoder"/>
        <filter level="WARN"/>
    </route>
</syslog>
